<project name="GaiaNominalScanningLaw" default="retrieve" xmlns:ivy="antlib:org.apache.ivy.ant">
	<target name="retrieve" description="Resolve and retrieve with ivy">
		<ivy:resolve />
		<ivy:retrieve type="jar" />
		<ivy:cachepath pathid="build.path" />
	</target>
	<target name="compile" depends="retrieve" description="Compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src" destdir="build/classes" includeantruntime="false" classpathref="build.path" />
	</target>
</project>